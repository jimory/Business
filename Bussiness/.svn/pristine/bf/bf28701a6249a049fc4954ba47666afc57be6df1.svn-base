@charset "utf-8";
/* CSS Document */
html, body {
	height:100%;
	margin:0px;
	font-size:12px;
	overflow:hidden;
}

#tab {
	width:200px;
}
#tab ul {
	padding:0;
	margin:0;
	list-style:none;
	margin-left:10px;
}
#tab div {
	float:left;
	margin-right:15px;
	padding:0 5px;
	line-height:1.5em;
	background:#9CF;
	border:#000 solid 1px;
	font-size:12px;
	position:relative;
	top:1px;
}
#tab .selectedLi {
	background:#0973C7;
	border-bottom-color:#cff;
}
#tab .selectedDiv {
	display:block;
}

